<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal">

    <fragment
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:name="com.example.videoeffectpreview.fragments.preview.PreviewFragment"
            android:id="@+id/previewFragment"/>
    <fragment
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:name="com.example.videoeffectpreview.fragments.effectControl.EffectControlFragment"
            android:id="@+id/effectControlFragment"/>
</androidx.appcompat.widget.LinearLayoutCompat>